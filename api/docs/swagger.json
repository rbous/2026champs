            "properties": {
                "id": {
                    "type": "string"
                },
                "joinedAt": {
                    "type": "string"
                },
                "nickname": {
                    "type": "string"
                },
                "rating": {
                    "type": "integer"
                },
                "roomCode": {
                    "type": "string"
                },
                "score": {
                    "type": "integer"
                }
            }
        },
        "model.Room": {
            "type": "object",
